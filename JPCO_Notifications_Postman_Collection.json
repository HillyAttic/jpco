{
  "info": {
    "name": "JPCO Notifications Testing",
    "description": "Test push notification system for JPCO Panel",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://jpcopanel.vercel.app",
      "type": "string"
    },
    {
      "key": "USER_ID",
      "value": "HEN5EXqthwYTgwxXCLoz7pqFl453",
      "type": "string"
    },
    {
      "key": "AUTH_TOKEN",
      "value": "PASTE_YOUR_FIREBASE_AUTH_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Check FCM Token Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/notifications/check-token?userId={{USER_ID}}",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "notifications", "check-token"],
          "query": [
            {
              "key": "userId",
              "value": "{{USER_ID}}"
            }
          ]
        },
        "description": "Check if the user has an FCM token registered. If not, user needs to enable notifications in the app."
      },
      "response": []
    },
    {
      "name": "2. Save FCM Token (Simulate Enable)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{USER_ID}}\",\n  \"token\": \"test-fcm-token-postman-{{$timestamp}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/notifications/fcm-token",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "notifications", "fcm-token"]
        },
        "description": "Save a test FCM token for the user. Note: This is a fake token and won't receive real push notifications. For real testing, user must enable notifications in the browser."
      },
      "response": []
    },
    {
      "name": "3. Send Test Notification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userIds\": [\"{{USER_ID}}\"],\n  \"title\": \"Test Notification from Postman\",\n  \"body\": \"This is a test notification sent via Postman API at {{$timestamp}}\",\n  \"data\": {\n    \"taskId\": \"test-task-{{$timestamp}}\",\n    \"url\": \"/notifications\",\n    \"type\": \"test\"\n  }\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/notifications/send",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "notifications", "send"]
        },
        "description": "Send a test push notification directly. Check the response to see if it was sent successfully or if there were errors."
      },
      "response": []
    },
    {
      "name": "4. Create Task with Notification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{AUTH_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Task from Postman {{$timestamp}}\",\n  \"description\": \"This task was created via Postman to test notifications\",\n  \"dueDate\": \"2024-02-20T10:00:00Z\",\n  \"priority\": \"high\",\n  \"status\": \"pending\",\n  \"assignedTo\": [\"{{USER_ID}}\"]\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/tasks",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "tasks"]
        },
        "description": "Create a new task and assign it to the user. This should automatically send a push notification. Requires valid Firebase auth token."
      },
      "response": []
    },
    {
      "name": "5. Get User Notifications",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{AUTH_TOKEN}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/notifications?userId={{USER_ID}}",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "notifications"],
          "query": [
            {
              "key": "userId",
              "value": "{{USER_ID}}"
            }
          ]
        },
        "description": "Get all notifications for the user. This shows the notification history including sent/failed status."
      },
      "response": []
    },
    {
      "name": "6. Delete FCM Token",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{USER_ID}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/notifications/fcm-token",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "notifications", "fcm-token"]
        },
        "description": "Delete the user's FCM token. Use this to simulate the user disabling notifications."
      },
      "response": []
    }
  ]
}
