# Performance optimizations for npm
legacy-peer-deps=true
# prefer-offline removed: causes stale cache issues where newly published package versions
# are incorrectly reported as non-existent, breaking CI/CD builds
progress=false
loglevel=warn

# Reduce package size
save-exact=true
package-lock=true

# Network resilience for CI/CD
# Increased retries and reduced timeout for better handling of transient network failures
fetch-retries=5
fetch-retry-mintimeout=2000
fetch-retry-maxtimeout=60000
